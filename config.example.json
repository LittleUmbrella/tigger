{
  "_comment": "This config file is safe to commit to version control. Sensitive values (apiId, apiHash, accessHash, botToken, API keys) should use environment variables. apiId can be set via TG_API_ID env var or removed from config.",
  "harvesters": [
    {
      "name": "main_harvester",
      "channel": "your_telegram_channel",
      "platform": "telegram",
      "envVarNames": {
        "apiId": "TG_API_ID",
        "accessHash": "TELEGRAM_ACCESS_HASH"
      },
      "pollInterval": 5000,
      "downloadImages": false,
      "skipOldMessagesOnStartup": true,
      "maxMessageAgeMinutes": 5
    },
    {
      "name": "discord_harvester",
      "channel": "1234567890123456789",
      "platform": "discord",
      "envVarNames": {
        "botToken": "DISCORD_BOT_TOKEN"
      },
      "pollInterval": 5000,
      "downloadImages": false
    }
  ],
  "parsers": [
    {
      "name": "main_parser",
      "channel": "your_telegram_channel",
      "ollama": {
        "baseUrl": "http://localhost:11434",
        "model": "llama3.2:1b",
        "timeout": 30000,
        "maxRetries": 2,
        "rateLimit": {
          "perChannel": 10,
          "perMinute": 30
        }
      }
    }
  ],
  "accounts": [
    {
      "name": "main",
      "exchange": "bybit",
      "testnet": false,
      "envVarNames": {
        "apiKey": "BYBIT_API_KEY",
        "apiSecret": "BYBIT_API_SECRET"
      }
    },
    {
      "name": "testnet",
      "exchange": "bybit",
      "testnet": true,
      "envVarNames": {
        "apiKey": "BYBIT_TESTNET_API_KEY",
        "apiSecret": "BYBIT_TESTNET_API_SECRET"
      }
    }
  ],
  "initiators": [
    {
      "name": "bybit",
      "riskPercentage": 3,
      "baseLeverage": 20,
      "accounts": ["main"]
    },
    {
      "name": "bybit_multi",
      "riskPercentage": 3,
      "baseLeverage": 20,
      "accounts": ["main", "testnet"]
    }
  ],
  "monitors": [
    {
      "type": "bybit",
      "testnet": false,
      "pollInterval": 10000,
      "entryTimeoutMinutes": 2880, // 2 days = 2880 minutes
      "breakevenAfterTPs": 1
    }
  ],
  "channels": [
    {
      "channel": "your_telegram_channel",
      "harvester": "main_harvester",
      "parser": "main_parser",
      "initiator": "bybit",
      "monitor": "bybit",
      "breakevenAfterTPs": 1,
      "baseLeverage": 20
    },
    {
      "channel": "1234567890123456789",
      "harvester": "discord_harvester",
      "parser": "main_parser",
      "initiator": "bybit",
      "monitor": "bybit",
      "breakevenAfterTPs": 1,
      "baseLeverage": 15
    }
  ],
  "database": {
    "type": "sqlite",
    "path": "data/trading_bot.db"
  }
}
